<Window x:Class="WpfResponsive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfResponsive"
        mc:Ignorable="d"
        Title="WpfResponsive" Height="450" Width="800">
  <Grid>
    <StackPanel>
      <Button Name="GetEmployeeSyncButton"
              Click="GetEmployeeSyncButton_Click">
        GetEmployees Synchronousely
      </Button>
      <Button Name="GetEmployeeAsyncButton"
              Click="GetEmployeeAsyncButton_Click">
        GetEmployees Asynchronousely
      </Button>
      <TextBox HorizontalAlignment="Stretch" Text="Type in here" />
      <ListBox Name="EmployeeListBox" Height="400" />
    </StackPanel>
  </Grid>
</Window>
