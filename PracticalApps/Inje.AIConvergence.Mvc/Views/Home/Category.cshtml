@using Inje.AIConvergence.Shared
@model Inje.AIConvergence.Shared.Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
  ViewData["Title"] = "Category Detail - " + Model.CategoryName;
}
<h2>Product Detail</h2>
<hr />
<div>
  <dl class="dl-horizontal">
    <dt>Category Id</dt>
    <dd>@Model.CategoryId</dd>
    <dt>Category Name</dt>
    <dd>@Model.CategoryName</dd>
    <dt>Total @Model.Products.Count Products in Category</dt>
    <dd>
      @if (Model.Products != null && Model.Products.Count > 0)
      {
        @foreach (Product p in Model.Products)
        {
          <span class="badge bg-info">
            @p.ProductId
            @p.ProductName
            @(p.UnitPrice is null ? "" : p.UnitPrice.Value.ToString("$#,##0.00"))
            @p.UnitsInStock in Stock
          </span>
        }
      }
      else
      {
        <span>No Products in this Category</span>
      }
    </dd>
  </dl>
</div>